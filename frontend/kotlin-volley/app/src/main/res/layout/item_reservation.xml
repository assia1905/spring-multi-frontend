<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewClientId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client ID: "
        android:textSize="16sp"
        android:textColor="@color/edittext_text"
        android:textColorHint="@color/edittext_hint"/>

    <TextView
        android:id="@+id/textViewChambreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chambre ID: "
        android:textSize="16sp"
        android:textColor="@color/edittext_text"
        android:textColorHint="@color/edittext_hint"/>

    <TextView
        android:id="@+id/textViewDateDebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Début: "
        android:textSize="16sp"
        android:textColor="@color/edittext_text"
        android:textColorHint="@color/edittext_hint"/>

    <TextView
        android:id="@+id/textViewDateFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Fin: "
        android:textSize="16sp"
        android:textColor="@color/edittext_text"
        android:textColorHint="@color/edittext_hint"/>

    <TextView
        android:id="@+id/textViewPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Préférences: "
        android:textSize="16sp"
        android:textColor="@color/edittext_text"
        android:textColorHint="@color/edittext_hint"/>

</LinearLayout>