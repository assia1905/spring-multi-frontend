<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:padding="16dp"
        android:title="Menu Principal"
        android:titleTextColor="@color/white" />

    <!-- Conteneur principal -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Bouton Gestion des Chambres -->
        <Button
            android:id="@+id/btnGestionChambres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background_primary"
            android:padding="12dp"
            android:text="Gestion des Chambres"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- Bouton Gestion des Réservations -->
        <Button
            android:id="@+id/btnGestionReservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_secondary"
            android:padding="12dp"
            android:text="Gestion des Réservations"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
