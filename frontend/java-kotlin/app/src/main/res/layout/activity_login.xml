<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/img"> <!-- Image de fond ajoutée -->

    <!-- Conteneur central avec CardView pour isoler les éléments -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Champ pour le nom d'utilisateur -->
            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Nom d'utilisateur"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:inputType="text"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint" />


            <!-- Champ pour le mot de passe -->
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Mot de passe"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:textColor="@color/edittext_text"
                android:textColorHint="@color/edittext_hint"/>

            <!-- Bouton de connexion -->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background_primary"
                android:text="Se connecter"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textStyle="bold" />

            <!-- Bouton pour rediriger vers l'écran d'inscription -->
            <Button
                android:id="@+id/buttonSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_secondary"
                android:text="S'inscrire"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
